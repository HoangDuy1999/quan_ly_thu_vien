    <table id="tblReader" class="display" style="width: 99%; margin-bottom: 20px">
        <thead>
          <tr>
              <th>
                Mã ĐG
              </th>
              <th style="min-width: 170px;">
                Họ Và Tên
              </th>
              <th>
                Loại Độc Giả
              </th>
              <th>
                Ngày Sinh
              </th>
              <th>
                Thư điện tử
              </th>
              <th>
                Ngày Lập Thẻ
              </th>
              <th>
                Người Lập
              </th>
              <th>
                Trạng Thái
              </th>
              <th style="max-width: 100px; min-width: 100px">
                Thao Tác
              </th>
          </tr>
        </thead>
        <tbody>
          {{#each this.list}}
          <tr>
              <td id="MaDG">
                {{MaDocGia}}
              </td>
              <td>
                {{HoTenDG}}
              </td>
              <td>
                {{TenLoaiDG}}
              </td>
              <td>
                {{NgaySinh}}
              </td>
              <td>
                {{Email}}
              </td>
              <td>
                {{NgayLapThe}}
              </td>
              <td>
                {{HoTenNV}}
              </td>
              <td>
                {{LoaiTinhTrangDG}}
              </td>
              <td style="min-width: 20px; max-width: 20px">
                <div class="row">
                    <a
                      class="btn btn-primary btn-sm mr-2 detailReader"
                      style="margin-left: 5%"
                      href="javascript;;"
                      role="button"
                      title="chi tiết"
                      data-toggle="modal"
                      data-target="#popupdetail"
                      >
                    <i class="fas fa-info-circle"></i>
                    </a>
                    <a
                      class="btn btn-warning btn-sm mr-2 editReader"
                      style="margin-left: 5%"
                      href="javascript;;"
                      role="button"
                      title="chỉnh sửa"
                      data-toggle="modal"
                      data-target="#popupedit"
                      >
                      <i class="far fa-edit"></i>
                    </a>
                    {{#if isDeleted}}
                    <a
                      class="btn btn-danger btn-sm mr-2 delStaff"
                      style="margin-left: 5%; pointer-events: none; opacity: 0.6"
                      href="javascript;;"
                      role="button"
                      title="Xóa nhân viên"
                      data-toggle="modal"
                      data-target="#popupDelete"
                      >
                    <i class="fa fa-trash"></i>
                    </a>
                    {{else}}
                    <a
                      class="btn btn-danger btn-sm mr-2 delStaff"
                      style="margin-left: 5%;"
                      href="javascript;;"
                      role="button"
                      title="Xóa nhân viên"
                      data-toggle="modal"
                      data-target="#popupDelete"
                      >
                    <i class="fa fa-trash"></i>
                    </a>
                    {{/if}}
                </div>
              </td>
          </tr>
          {{/each}}
