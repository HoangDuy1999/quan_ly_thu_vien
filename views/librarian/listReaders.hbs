          iconHtml: '',
          confirmButtonText: 'Trở về',
          showCloseButton: true
      })
      return false;
    }
    $.getJSON(`/index/manager_readers/add/isValidPassPort/condition?CMND_CCCD=${CMND_CCCD}&MaDocGia=${MaDocGia}`, function (data) {
      if (data){
