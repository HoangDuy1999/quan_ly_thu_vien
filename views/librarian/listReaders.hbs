    const TinhTrang = $("#cTinhTrang").val().trim();

    if(MaDocGia == ""){
      Swal.fire({
          title: 'Họ tên độc giả không được rỗng',
          icon: 'error',
          iconHtml: '',
          confirmButtonText: 'Trở về',
          showCloseButton: true
      })
      return false;
    }
    if(HoTenDG == ""){
      Swal.fire({
          title: 'Họ tên độc giả không được rỗng',
          icon: 'error',
          iconHtml: '',
          confirmButtonText: 'Trở về',
          showCloseButton: true
      })
      return false;
    }
    if(DiaChi == ""){
      Swal.fire({
          title: 'Địa chỉ không được rỗng',
          icon: 'error',
          iconHtml: '',
          confirmButtonText: 'Trở về',
          showCloseButton: true
      })
      return false;
    }
    if(Email == ""){
       Swal.fire({
          title: 'Thư điện tử không được rỗng.',
          icon: 'error',
          iconHtml: '',
          confirmButtonText: 'Trở về',
          showCloseButton: true
       });
       return false;
    }
    if(NgaySinh == "" || NgaySinh == "__/__/____"){
      Swal.fire({
          title: 'Ngày sinh của độc giả không được rỗng',
          icon: 'error',
          iconHtml: '',
          confirmButtonText: 'Trở về',
          showCloseButton: true
      })
      return false;
    }
    if(!validateEmail(Email)){
       Swal.fire({
          title: 'Thư điện tử không hợp lệ',
          icon: 'error',
          iconHtml: '',
          confirmButtonText: 'Trở về',
          showCloseButton: true
       });
       return false;
    }
      if(HoTenDG == ""){
      Swal.fire({
